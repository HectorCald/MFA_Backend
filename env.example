# Configuración del servidor
PORT=3000
NODE_ENV=development

# Opción 1: Conexión con DATABASE_URL (Recomendado para Render/Heroku)
DATABASE_URL=postgresql://usuario:password@host:puerto/nombre_base
DB_SSL=true

# Opción 2: Conexión con variables individuales (Para desarrollo local)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=tu_password
# DB_NAME=tu_base
# DB_SSL=false

# Nota: Si usas DATABASE_URL, las variables individuales se ignoran
# Si no usas DATABASE_URL, debes configurar todas las variables individuales
